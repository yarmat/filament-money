{
    "name": "ymsoft/filament-money",
    "description": "Filament plugin for convenient storage and management of monetary fields",
    "keywords": [
        "ymsoft",
        "laravel",
        "filament-money"
    ],
    "homepage": "https://github.com/ymsoft/filament-money",
    "license": "MIT",
    "authors": [
        {
            "name": "YarmaT",
            "email": "support@ymsoft.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "cknow/laravel-money": "^8.4",
        "filament/filament": "^4.2",
        "illuminate/contracts": "^11.28||^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "webmozart/assert": "^1.12"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ymsoft\\FilamentMoney\\": "src/",
            "Ymsoft\\FilamentMoney\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ymsoft\\FilamentMoney\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@composer run prepare"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ymsoft\\FilamentMoney\\FilamentMoneyServiceProvider"
            ],
            "aliases": {
                "FilamentMoney": "Ymsoft\\FilamentMoney\\Facades\\FilamentMoney"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
